generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Registration {
  id        Int      @id @default(autoincrement())
  name      String
  mobile    String
  dob       String
  class     Class
  course    Course
  division  String
  school    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  Checkin   Checkin?

  @@unique([mobile, dob], map: "registrations_unique_mobile_dob_idx")
  @@map("registrations")
}

model Checkin {
  id             Int          @id @default(autoincrement())
  registrationId Int          @unique
  registration   Registration @relation(fields: [registrationId], references: [id], onDelete: Cascade)
  checkedInAt    DateTime
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
}

enum Class {
  PLUS_ONE
  PLUS_TWO
}

enum Course {
  SCIENCE
  COMMERCE
  HUMANITIES
  VHSE
}
